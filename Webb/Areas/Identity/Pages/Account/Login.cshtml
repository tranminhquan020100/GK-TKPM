@page
@model LoginModel
@using Lap1.Models;
@inject SignInManager<ApplicationUser> SignInManager

<h1>@ViewData["Title"]</h1>
<div class="breadcrumbs overlay">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-8 offset-lg-2 col-md-12 col-12">
				<div class="breadcrumbs-content">
					<h1 class="page-title">Bệnh Viện Mắt Hàng Đầu</h1>
				</div>
				<ul class="breadcrumb-nav">
					<li><a href="index.html">Home</a></li>
					<li>Đăng nhập</li>
				</ul>
			</div>
		</div>
	</div>
</div>

<style>
	.locdz-button {
		background-color: #F75050;
		color: #fff;
	}
	.button{
		display:flex;
	}
</style>
<section class="appointment page section">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 col-md-12 col-12">

				<div class="appointment-form">
					<div class="row">
						<div class="col-12">
							<div class="appointment-title">
								<h2>Đăng Nhập</h2>
							</div>
						</div>
					</div>
					<form asp-route-returnurl="@ViewData[" ReturnUrl"]" method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="row">
							<div class="col-lg-6 col-md-6 col-12 p-0">
								<div class="appointment-input">
									<label for="email"><i class="lni lni-envelope"></i></label>
									<input type="email" asp-for="Input.Email" value="nhatloc200@gmail.com" placeholder="Your Email">
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12 p-0">
								<div class="appointment-input">
									<label for="pass"><i class="lni lni-lock"></i></label>
									<input asp-for="Input.Password" value="Admin@123" type="password">
								</div>
							</div>
							<div class="col-lg-12 col-md-12 col-12 p-0">
								<div class="appointment-input">
									<a href="/Identity/Account/ForgotPassword">Quên mật khẩu?</a>
								</div>
							</div>
					</form>
					<div class="col-lg-6 col-md-6 col-12 p-0">
						<div class="appointment-btn button">
							<button type="submit" class="btn">Login</button>
							<div class="divider"></div>
							@{ var loginProviders = await SignInManager.GetExternalAuthenticationSchemesAsync();
								if (loginProviders.Count() != 0)
											{
								<form asp-area="Identity" asp-page="/Account/ExternalLogin" asproute-returnurl="@ViewData["ReturnUrl"]" method="post">

									@foreach (var provider in loginProviders)
									{
							<button type="submit" class="locdz-button" name="provider" value="@provider.DisplayName" title="Log in using your@provider.DisplayName account">
								<i class="lni lni-google"></i> @provider.DisplayName
							</button>}

								</form> } }
						</div>
					</div>

				</div>
					
				</div>

			</div>
		</div>
	</div>
</section>
